@model MIS.Models.OwnerInventory

@{
    ViewData["Title"] = "Create Existing Item Stock Request";
}

<h2>Are you sure to request this new item?</h2>

<form class="form-horizontal" asp-action="Create_Not_Existing">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label class="control-label col-sm-2">@Html.DisplayNameFor(model => model.ProductID)</label>
        <div class="col-sm-10">
            <p class="form-control-static">@Html.DisplayFor(model => model.ProductID)</p>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2">@Html.DisplayNameFor(model => model.Product.Name)</label>
        <div class="col-sm-10">
            <p class="form-control-static">@Html.DisplayFor(model => model.Product.Name)</p>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2">@Html.DisplayNameFor(model => model.Product.Value)</label>
        <div class="col-sm-10">
            <p class="form-control-static">@Html.DisplayFor(model => model.Product.Value)</p>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2">Quantity To Request:</label>
        <div class="col-sm-10">
         <p class="form-control-static" >1</p>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-10">
            <input type="submit" value="Submit" class="btn btn-default" />
            <a asp-action="List_Not_Existing">
                <input type="button" class="btn btn-default" value="Back To List" />
            </a>
        </div>
    </div>
</form>
