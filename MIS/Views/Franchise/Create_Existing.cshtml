@model MIS.Models.StoreInventory

@{
    ViewData["Title"] = "Create Existing Item Stock Request";
}

<h2>Create Existing Item Stock Request</h2>

        <form class="form-horizontal" asp-action="Create_Existing">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label for="ProductID" class="control-label col-sm-2">@Html.DisplayNameFor(model => model.ProductID)</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Html.DisplayFor(model => model.ProductID)</p>
                </div>
            </div>

            <div class="form-group">
                <label for="ProductName" class="control-label col-sm-2">@Html.DisplayNameFor(model => model.Product.Name)</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Html.DisplayFor(model => model.Product.Name)</p>
                </div>
            </div>

            <div class="form-group">
                <label for="ProductValue" class="control-label col-sm-2">@Html.DisplayNameFor(model => model.Product.Value)</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Html.DisplayFor(model => model.Product.Value)</p>
                </div>
            </div>

            <div class="form-group">
                <label  class="control-label col-sm-2">Quantity To Request:</label>
                <div class="col-sm-4">
                    <input name="quantity" type ="number" min ="1" max="100" class="form-control" required />
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                    <a asp-action="Index">
                        <input type="button" class="btn btn-default" value="Back To List" />
                    </a>
                </div>
            </div>
        </form>