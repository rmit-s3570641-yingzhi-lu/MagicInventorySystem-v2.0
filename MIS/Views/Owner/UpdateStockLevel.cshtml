@model MIS.Models.OwnerInventory
@{
    ViewData["Title"] = "Reset Stock";
}

<h2>Reset Stock</h2>
<hr />
<div class="row">
    <div class="col-xs-8">
        <form class="form-horizontal" asp-action="UpdateStockLevel">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label for="ProductID" class="col-sm-2 control-label">@Html.DisplayNameFor(model => model.ProductID)</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Html.DisplayFor(model => model.ProductID)</p>
                </div>
            </div>

            <div class="form-group">
                <label for="ProductName" class="col-sm-2 control-label">@Html.DisplayNameFor(model => model.Product.Name)</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Html.DisplayFor(model => model.Product.Name)</p>
                </div>
            </div>

            <div class="form-group">
                <label for="ProductValue" class="col-sm-2 control-label">@Html.DisplayNameFor(model => model.Product.Value)</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Html.DisplayFor(model => model.Product.Value)</p>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="StockLevel" class="col-sm-2 control-label">@Html.DisplayNameFor(model => model.StockLevel)</label>
                <div class="col-sm-2">
                    <input asp-for="StockLevel" class="form-control" />
                    <span asp-validation-for="StockLevel" class="text-danger" />
                </div>
            </div>

            <div class="form-group"> 
                <input type="submit" value="Save" class="btn btn-default" />
                <a asp-action="Index">
                    <input type="button" class="btn btn-default" value="Back To List" />
                </a>
            </div>
        </form>
    </div>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }


