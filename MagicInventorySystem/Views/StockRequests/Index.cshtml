@model IEnumerable<MagicInventorySystem.Models.StockRequest>

@{
    ViewData["Title"] = "Stock Requests";
}

<h2>Stock Requests</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Store)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Store.StoreID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StockRequestID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.StockRequestID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.StockRequestID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
